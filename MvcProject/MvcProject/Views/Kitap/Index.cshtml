@using MvcProject.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px;">
        <b>Aranacak Kitap Adını Girin: &nbsp </b> @Html.TextBox("p")
        <input type="submit" value="Ara"/>
    </div>
}
<table class="table table-striped">
    <tr style=" background-color: #899697">
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazarı</th>
        <th>Kategorisi</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Kitap Resmi</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.AD</td>
            <td>@k.TBLYAZAR.AD &nbsp @k.TBLYAZAR.SOYAD</td>
            <td>@k.TBLKATEGORI.AD</td>
            <td>@k.BASIMYIL</td>
            <td>@k.YAYINEVI</td>
            <td>@k.SAYFA</td>
            <td>@k.DURUM</td>
            <td>
                @Html.ActionLink("Sil", "KitapSil", new { id = k.ID }, new
                        {
                            @class
               = "btn btn-danger",
                            onclick = "return confirm('Silmek istiyor musunuz?')"
                        })
                    </td>
            <td><a href="/Kitap/KitapGetir/@k.ID" class="btn btn-success" style="background-color:#217139; color:#ffffff">Güncelle</a></td>
            <td><a href="/Kitap/image/@k.ID" style="background-color: #313030; color:#ffffff " class="btn btn-default">Kitap Resmi</a></td>
        </tr>
    }
</table>
<a href="/Kitap/KitapEkle/" class="btn btn-group" style="background-color: #899697; color: #ffffff">Yeni Kitap Ekle</a>