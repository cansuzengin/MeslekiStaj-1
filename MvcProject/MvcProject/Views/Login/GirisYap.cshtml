<body>
    <h1>Kütüphane Giriş Paneli</h1>
    <div class=" w3l-login-form">
        <h2>Giriş Yap</h2>

        <div id="id01" class="w3-modal">
            <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="max-width:600px">

                <div class="w3-center">
                    <br>
                    <span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-xlarge w3-hover-red w3-display-topright" title="Close Modal">&times;</span>
                    <img src="~/web/img/library.png" alt="Avatar" style="width:30%" class="w3-circle w3-margin-top">
                </div>

                <form class="w3-container" method="post" action="/Login/SifreKontrol/">
                    <div class="w3-section">
                        <label><b>Email</b></label>
                        <input class="w3-input w3-border w3-margin-bottom" type="text" placeholder="Mail adresinizi giriniz.." name="MAIL" required>
                        <label><b>Güvenlik Anahtarı</b></label>
                        <input class="w3-input w3-border" type="password" placeholder="Güvenlik Anahtarınızı giriniz.." name="KURTARMA" required>
                        <br />
                        <label><b>Yeni Şifre</b></label>
                        <input class="w3-input w3-border" type="password" placeholder="Yeni Şifrenizi giriniz.." name="SIFRE" required>
                        <br />
                        <button class="w3-button w3-block w3-green w3-section w3-padding" type="submit">Kaydet</button>
                    </div>
                </form>

            </div>
        </div>

        @using (Html.BeginForm("GirisYap", "Login", FormMethod.Post))
        {
            <div class=" w3l-form-group">
                <label>KULLANICI ADI:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adı" required="required" name="KULLANICIADI" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>ŞİFRE:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Şifre" required="required" name="SIFRE" />
                </div>
            </div>
            <div class="forgot">
                <a href="#" onclick="document.getElementById('id01').style.display='block'" style="color:white" class="checkbox">Şifrenizi mi unuttunuz?</a>
            </div>
            <button type="submit" id="ac">GİRİŞ YAP</button>
            <br />
            <div class=" w3l-form-group">
                <input type="hidden" class="form-control" name="Uyari" id="Uyari" value="@ViewBag.intValue" />
            </div>
        }

        <dialog id="modal">
            <form action="" method="dialog">
                <br />
                <output style="font-family:'Times New Roman';color:red">  &nbsp Hata Mesajı</output>
                <div>
                    <h2 style="color:black">Kullanıcı adı veya şifre hatalı!</h2>
                </div>
                <div>
                    <menu>
                        <button style="font-size:15px;width:150px;border:none;  background:#275964;color:#ffffff;padding:10px" value="onay">Tamam</button>
                    </menu>
                </div>

            </form>
        </dialog>
        <script>
            var modalAc = document.querySelector("#ac");
            var modal = document.querySelector("#modal");
            var output = document.querySelector("output");

            console.log(document.getElementById("Uyari").value);
            if (document.getElementById("Uyari").value == 1) {
                modal.showModal();
            }

        </script>


        <p class=" w3l-register-p">Yönetici girişi için tıklayın.<a href="/AdminLogin/Login/" class="register"> Yönetici Girişi</a></p>
        <p class=" w3l-register-p">Hesabınız yok mu?<a href="/Register/kayit/" class="register"> Kayıt Ol</a></p>
    </div>
    <footer>
        <p class="copyright-agileinfo"> &copy; 2022 Tüm Hakları Saklıdır. | Design by <a href="http://w3layouts.com">W3layouts</a></p>
    </footer>
</body>
</html>