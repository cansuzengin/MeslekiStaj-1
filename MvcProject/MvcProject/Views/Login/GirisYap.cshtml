    <style>
        dialog {
            padding: 0;
            border: none;
            border-radius: 20px;
            width: 30%;
        }

            dialog::backdrop {
                background: rgb(99,110,114,.9);
            }

            dialog div {
                border-bottom: 1px solid #b2bec3;
                padding: 20px;
            }
    </style>

