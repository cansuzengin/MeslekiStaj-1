@model MvcProject.Models.Entity.TBLDUYURU
@{
    ViewBag.Title = "DuyuruGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("DuyuruGüncelle", "Duyuru", FormMethod.Post))
{
    <div style=" margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        <label>Başlık</label>
        @Html.TextBoxFor(k => k.BASLIK, new { @class = "form-control" })
        <br />
        <label>Duyuru</label>
        @Html.TextBoxFor(k => k.DUYURU, new { @class = "form-control" })
        <br />
        <label>Tarih</label>
        @Html.TextBoxFor(k => k.TARIH, "{0: dd.MM.yyyy}", new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-group" style="background-color:#680f90; color:#ffffff">Güncelle</button>
    </div>
}